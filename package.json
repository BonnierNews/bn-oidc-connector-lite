{
  "name": "@bonniernews/bn-oidc-connector-express",
  "version": "0.0.2",
  "description": "Express middleware for handling user authentication from Bonnier News Fastly Compute OIDC headers",
  "type": "module",
  "main": "dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "homepage": "https://github.com/BonnierNews/bn-oidc-connector-express#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BonnierNews/bn-oidc-connector-express.git"
  },
  "bugs": {
    "url": "https://github.com/BonnierNews/bn-oidc-connector-express/issues"
  },
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "test": "node --test --test-force-exit --test-reporter ${REPORTER:-spec} --import \"tsx/esm\" --import \"./test/setup.ts\" \"test/**/*.{test,unit,feature}.ts\"",
    "coverage": "c8 npm test && c8 check-coverage",
    "posttest": "npm run lint",
    "lint": "eslint . --cache && npm run typecheck",
    "format": "eslint --fix ."
  },
  "author": "Bonnier News AB",
  "license": "MIT",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "express": "^5.0.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "tsx": "^4.3.0"
  },
  "devDependencies": {
    "@bonniernews/eslint-config": "^2.0.2",
    "@bonniernews/node-test-bdd": "^0.0.4",
    "@bonniernews/tsconfig": "^0.0.2",
    "@types/chai": "^5.0.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^22.0.0",
    "@types/pem-jwk": "^2.0.2",
    "@types/supertest": "^6.0.3",
    "c8": "^10.1.3",
    "chai": "^6.0.0",
    "eslint": "^9.19.0",
    "nock": "^14.0.4",
    "pem-jwk": "^2.0.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.3.0"
  }
}
